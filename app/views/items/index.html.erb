<main role="main">
<div class="album py-5 bg-light">
<div class="container">

<h1>Voici nos chats</h1>
<% @items = Item.all %>
<% @items.each do |item| %>
    <%= item.title %><br/>
    <%= item.description %><br/>
    <%= item.price %><br/>
    <img src="<%= item.image_url %>", class: "img-responsive">
    <p class='button_list_table'>
    <%= link_to "DÃ©tails", item_path(item), class: "btn btn-success" %></p><br/>
    <% if user_signed_in? %>
        <div class="block2-btn-addcart w-size1 trans-0-4">
        <!-- Button -->
			<%= link_to adding_path(item), method: 'post' do %> 
			<button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4">
          Ajout panier
      </button>
	<%end%>
    <% else%>
	    <div class="w-size1 trans-0-4" style="margin-top:50%;margin-left:23%;">
	    <button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4">
			<%= link_to "Connexion", new_user_session_path %>
	    </button>
    <%end%><br/><br/>
<% end %>

</div>
</div>

</main>



